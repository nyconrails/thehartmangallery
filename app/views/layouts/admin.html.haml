!!!
%html
  %head
    %title #{yield :title} The Hartman Gallery - Admin
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'			  
    = csrf_meta_tag

  %body.admin
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          = link_to 'The Hartman Gallery', admin_root_path, :class => 'brand'
          %ul.nav
            %li.divider-vertical
            %li= link_to 'Items', admin_items_path
            %li.divider-vertical
            %li= link_to 'Collections', admin_collections_path
            %li.divider-vertical
    .container
      - if alert
        .alert.alert.fade.in
          = link_to 'X', '#', :class => 'close', 'data-dismiss' => 'alert'
          = alert
      - if notice
        .alert.alert.fade.in
          = link_to 'X', '#', :class => 'close', 'data-dismiss' => 'alert'
          = notice
      = yield