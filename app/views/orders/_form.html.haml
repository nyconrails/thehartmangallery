#standard_form
  = simple_form_for(@order) do |f|
    = f.error :error
    .row
      .span3
        = f.input :first_name
        = f.input :last_name
        = f.input :address
        = f.input :city
        = f.input :state
        = f.input :postal_code
        = f.input :phone_number
        = f.input :email
      .span3
        = f.input :credit_card_number
        = f.input :card_type, :collection => ['Visa','Mastercard','Amex','Discover']
        = f.input :expiration_month, :collection => ['01','02','03','04','05','06','07','08','09','10','11','12']
        = f.input :expiration_year, :collection => ['2012','2013','2014','2015','2016','2017','2018','2019']
        = f.input :cvv, input_html: { maxlength: '4' }
        = f.hidden_field :item_id, value: params[:item_id] || params[:order][:item_id]

        %p &nbsp;
        .well
          %h3 You will be charged #{number_to_currency(@item.price)}USD
        = f.submit "Place My Order", :class => 'btn btn-success btn-large'